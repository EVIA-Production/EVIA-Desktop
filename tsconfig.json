{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "allowJs": true,
    "jsx": "react-jsx",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": [
    "src/main/**/*",
    // We explicitly include the websocketService so main process can import it.
    "src/renderer/services/websocketService.ts"
  ],
  "exclude": ["dist", "src/renderer/**"]
}

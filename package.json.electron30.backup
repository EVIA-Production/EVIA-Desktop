{
  "name": "evia-desktop",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "run-p dev:vite dev:electron",
    "dev:vite": "cross-env NODE_ENV=development vite --port=5174",
    "dev:electron": "npm run build:main && cross-env NODE_ENV=development ELECTRON_DISABLE_SECURITY_WARNINGS=1 electron .",
    "dev:renderer": "vite",
    "dev:main": "npm run build:main && cross-env NODE_ENV=development electron .",
    "build:main": "tsc -p tsconfig.json",
    "build": "tsc -p tsconfig.json && vite build && electron-builder",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "postinstall": "electron-builder install-app-deps",
    "start": "npm run dev",
    "package": "echo 'Use electron-builder via build script'",
    "make": "echo 'Use electron-builder via build script'"
  },
  "dependencies": {
    "dompurify": "^3.2.6",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.3.9",
    "highlight.js": "^11.11.1",
    "keytar": "^7.9.0",
    "marked": "^16.2.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.9.0",
    "@electron-forge/maker-deb": "^7.9.0",
    "@electron-forge/maker-rpm": "^7.9.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-zip": "^7.9.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.9.0",
    "@electron-forge/plugin-fuses": "^7.9.0",
    "@electron/fuses": "^1.8.0",
    "@electron/notarize": "^2.5.0",
    "@types/electron": "^1.4.38",
    "@types/node": "^20.19.17",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "esbuild": "^0.21.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.4",
    "vite": "^5.4.2"
  }
}

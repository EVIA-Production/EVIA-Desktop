<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Screen Recording / System Audio Capture -->
	<key>com.apple.security.personal-information.screen-recording</key>
	<true/>
	
	<!-- Microphone Access -->
	<key>com.apple.security.device.audio-input</key>
	<true/>
	<key>com.apple.security.device.microphone</key>
	<true/>
	
	<!-- Camera Access (for future use) -->
	<key>com.apple.security.device.camera</key>
	<true/>
	
	<!-- JIT compilation for V8 engine -->
	<key>com.apple.security.cs.allow-jit</key>
	<true/>
	
	<!-- Allow unsigned executable memory (required for Electron) -->
	<key>com.apple.security.cs.allow-unsigned-executable-memory</key>
	<true/>
	
	<!-- Allow dyld environment variables (dev builds) -->
	<key>com.apple.security.cs.allow-dyld-environment-variables</key>
	<true/>
	
	<!-- Disable library validation (dev builds) -->
	<key>com.apple.security.cs.disable-library-validation</key>
	<true/>
</dict>
</plist>


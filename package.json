{
  "name": "evia-desktop",
  "version": "0.1.0",
  "private": true,
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "npm-run-all -p dev:renderer dev:main",
    "dev:renderer": "vite",
    "dev:main": "npm run build:main && cross-env NODE_ENV=development electron .",
    "build:main": "tsc -p tsconfig.json",
    "build": "tsc -p tsconfig.json && vite build && electron-builder",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "dompurify": "^3.2.6",
    "electron-updater": "^6.3.9",
    "highlight.js": "^11.11.1",
    "keytar": "^7.9.0",
    "marked": "^16.2.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@types/node": "^20.14.11",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "esbuild": "^0.21.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.4",
    "vite": "^5.4.2"
  }
}
